{
    "compileOnSave": false,
    "compilerOptions": {
        "allowJs": true,
        "lib": ["dom", "es2015", "es2016"],
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}
